#!/bin/bash
# Скрипт для вывода списка процессов, используя данные из /proc
for pid in /proc/[0-9]*; do
    # Извлекаем PID из имени директории
    pid_number=$(basename "$pid")
    # Читаем информацию о процессе из /proc/[pid]/stat
    if [ -r "$pid/stat" ]; then read -r pid comm state < "$pid/stat"
        # Удаляем круглые скобки из имени команды
        comm=${comm//[\(\)]/}
        # Выводим PID, имя команды и состояние
        echo "PID: $pid_number, Command: $comm, State: $state" fi
done
